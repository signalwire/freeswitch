    if test "${enable_64}" = "yes"; then
        COMPILER_CFLAGS=-m64
        COMPILER_CXXFLAGS=-m64
    fi
fi

AC_SUBST(COMPILER_CFLAGS)
AC_SUBST(COMPILER_CXXFLAGS)

dnl =======================================================================
